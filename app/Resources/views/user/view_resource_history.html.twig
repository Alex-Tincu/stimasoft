{% extends 'twitter_bootstrap.html.twig' %}

{% block body %}

    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href=";">Web monitoring</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/user/list_resources">Monitor</a></li>
                    <li><a href=";">Alerts</a></li>
                    <li><a href=";">Account</a></li>
                </ul>

            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">

        <h3>&nbsp;</h3>
        <h3>&nbsp;</h3>

        <h2 class="sub-header">{{ resource.url }}

            <a href="/user/list_resources" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back</a>

        </h2>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Content</th>
                    <th>Change date</th>
                </tr>
                </thead>
                <tbody>
                {% for val in changes %}
                    <tr>
                        <td>{{ val.html|raw }}</td>
                        <td class="col-xs-2">{{ val.date|date("m-d-Y H:i") }}</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>

    </div> <!-- /container -->

{% endblock %}
