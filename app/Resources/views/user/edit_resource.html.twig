{% extends 'twitter_bootstrap.html.twig' %}

{% block content %}

    <form action="{{ path("user_edit_resource", {'resourceId': resource.id}) }}" method="post" class="form-horizontal">

        <div class="form-group">
            <label for="url" class="col-sm-2 control-label">URL</label>
            <div class="col-sm-4">
                <input type="text" id="url" name="_url" value="{{ resource.url }}" required="required" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label for="css_rule" class="col-sm-2 control-label">CSS rule</label>
            <div class="col-sm-4">
                <input type="text" id="css_rule" name="_css_rule" value="{{ resource.cssRule }}" required="required" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label for="alert_html" class="col-sm-2 control-label">Cand sa fiu notificat?</label>
            <div class="col-sm-6">
                <textarea id="alert_html" name="_alert_html" class="form-control">{{ resource.alertHtml }}</textarea>
                <span id="helpBlock" class="help-block"><small>Vei fi notificat cand textul introdus aici este identic cu cel din pagina web in cazul introducerii unei valori de tip string sau cand aceasta este mai mica decat cea din pagina web in cazul unei valori numerice. </small></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <input type="submit" id="_submit" name="_submit" value="Salveaza" class="btn btn-default"/>
            </div>
        </div>

    </form>

{% endblock %}
